template<class v>
auto operator<<(ostream &os, const vector<v> &vec)->ostream& {
    os << vec[0];
    for (size_t i = 1; i < vec.size(); i++) os << ' ' << vec[i];    
    os << '\n';
    return os;
}
template<class v>
auto operator>>(istream &is, vector<v> &vec)->istream& {
    for (auto &i : vec) is >> i;    
    return is;
}
template<class v>
auto operator<<(ostream &os, const vector<vector<v>> &vec)->ostream& {
    for (auto &i : vec) {
        os << i[0];
        for (size_t j = 1; j < i.size(); j++) os << ' ' << i[j];        
        os << '\n';
    }
    return os;
}
template<class v>
auto operator>>(istream  &is, vector<vector<v>> &vec)->istream& {
    for (auto &i : vec) 
        for (auto &j : i) is >> j;            
    return is;
}
vector<vector<char>> adj;
vector<vector<bool>> vis;
int n,m;
void flo(int i,int j){
    if(i < 0 || i >= n || j < 0 || j>= m || vis[i][j] || adj[i][j]=='#')return;
    vis[i][j] = 1;
    flo(i+1,j);
    flo(i,j+1);
    flo(i-1,j);
    flo(i,j-1);
}
signed main(){
	ios;
    cin>>n>>m;
    adj = vector<vector<char>>(n, vector<char>(m));
    vis = vector<vector<bool>>(n, vector<bool>(m, 0));
    cin>>adj;
    int res=0;
    for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            if(!vis[i][j] && adj[i][j] == '.'){
                res++;
                flo(i,j);

            }
        }   
    }
    cout<<res<<endl;
}



 
